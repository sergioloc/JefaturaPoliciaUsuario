<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tituloTC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terminos y condiciones"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/desTC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/tituloTC"
        android:textSize="15dp"
        android:text="Este sistema tiene como fin ayudar a mejorar el sistema de denuncias de la policia y poder ayudar mas rapidamente a personas que se encuentren en algún caso de emergencia. Por esta razón el uso inapropiado del sistema sera penado con una multa acorde a la gravedad de los hechos."/>

    <CheckBox
        android:id="@+id/acuerdo"
        android:layout_margin="10dp"
        android:layout_below="@+id/desTC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estoy de acuerdo con los terminos y condiciones"/>

    <Button
        android:id="@+id/botonTerminos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acuerdo"
        android:layout_alignLeft="@+id/acuerdo"
        android:layout_alignRight="@+id/acuerdo"
        android:text="Aceptar"/>

</RelativeLayout>