<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    tools:context="com.cdi.practica.jefaturapoliciausuario.Registro">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textInfoPers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorPrimaryText"
                android:text="Información personal"/>

            <View
                android:id="@+id/bar1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/textInfoPers"
                android:background="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/nombre"
                android:text="*"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@id/nombre"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/nombre"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@id/bar1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/gris"
                android:textColor="@color/colorPrimaryText"
                android:hint="Nombre"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/apellidos"
                android:text="*"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@id/apellidos"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/apellidos"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/nombre"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/gris"
                android:textColor="@color/colorPrimaryText"
                android:hint="Apellidos"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/nombre"
                android:text="*"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@id/dni"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/dni"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/apellidos"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/gris"
                android:textColor="@color/colorPrimaryText"
                android:hint="DNI"/>

            <Spinner
                android:id="@+id/sexo"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/gris"
                android:textColor="@color/colorPrimaryText"
                android:layout_below="@+id/dni" />

            <EditText
                android:id="@+id/telefono"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/sexo"
                android:textColorHint="@color/gris"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginTop="10dp"
                android:hint="Telefono"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/nombre"
                android:text="*"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@id/telefono"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/nacimiento"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:textColorHint="@color/gris"
                android:layout_below="@+id/telefono"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginTop="10dp"
                android:hint="Fecha de nacimiento"/>

            <EditText
                android:id="@+id/nacionalidad"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/nacimiento"
                android:textColorHint="@color/gris"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginTop="10dp"
                android:hint="Nacionalidad"/>

            <EditText
                android:id="@+id/domicilio"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/nacionalidad"
                android:textColorHint="@color/gris"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginTop="10dp"
                android:hint="Domicilio"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/nombre"
                android:text="*"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@id/domicilio"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textInfoAcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/domicilio"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/gris"
                android:paddingLeft="10dp"
                android:text="Información de la cuenta"/>

            <View
                android:id="@+id/bar2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/textInfoAcc"
                android:background="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/nombre"
                android:text="*"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@id/email"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:textColorHint="@color/gris"
                android:textColor="@color/colorPrimaryText"
                android:layout_below="@+id/bar2"
                android:layout_marginTop="10dp"
                android:hint="Email"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/nombre"
                android:text="*"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@id/password"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/email"
                android:inputType="textPassword"
                android:textColorHint="@color/gris"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginTop="10dp"
                android:hint="Contraseña"/>

            <EditText
                android:id="@+id/password2"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/password"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/gris"
                android:layout_marginTop="10dp"
                android:hint="Repetir contraseña"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/nombre"
                android:text="*"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@id/password2"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textInfoExtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimaryText"
                android:layout_below="@+id/password2"
                android:textColorHint="@color/gris"
                android:paddingLeft="10dp"
                android:text="Vehiculos y propiedades"/>

            <View
                android:id="@+id/bar3"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/textInfoExtra"
                android:background="@android:color/black"/>

            <TextView
                android:id="@+id/vehicles"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/telefono"
                android:layout_below="@+id/bar3"
                android:layout_marginTop="20dp"
                android:text="Vehiculos:"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/gris"
                android:gravity="center|left"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/numVehicles"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/vehicles"
                android:layout_below="@+id/bar3"
                android:layout_marginTop="20dp"
                android:text="0"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/gris"
                android:gravity="center"
                android:textSize="18dp"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/addVehicle"
                android:src="@drawable/ic_action_add"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/numVehicles"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/bar3"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/properties"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/telefono"
                android:layout_below="@+id/vehicles"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryText"
                android:text="Propiedades:"
                android:textColorHint="@color/gris"
                android:gravity="center|left"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/numProperties"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/properties"
                android:layout_below="@+id/vehicles"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textColor="@color/colorPrimaryText"
                android:gravity="center"
                android:textSize="18dp"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/addPropertie"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/numProperties"
                android:layout_below="@+id/vehicles"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_action_add"/>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/aceptSignUp"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/properties"
                android:layout_marginTop="30dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:layout_above="@+id/registro"
                android:layout_marginBottom="30dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="2dp"
                fancy:fb_defaultColor="@color/colorPrimary"
                fancy:fb_focusColor="#9bd823"
                fancy:fb_radius="30dp"
                fancy:fb_text="ACEPTAR"
                fancy:fb_textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Campos obligatorios"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/aceptSignUp"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginBottom="10dp"/>



        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
