<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cdi.practica.jefaturapoliciausuario.Registro_Vehiculo">

    <Spinner
        android:id="@+id/tipo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/matricula"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/modelo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/seguro"
        android:layout_marginBottom="10dp"
        android:hint="Modelo"/>
    <EditText
        android:id="@+id/matricula"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@id/modelo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:hint="Matricula"/>
    <EditText
        android:id="@+id/seguro"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Seguro"/>
    <EditText
        android:id="@+id/itv"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/seguro"
        android:layout_marginTop="10dp"
        android:hint="Ãšltima ITV"/>

    <Button
        android:id="@+id/aceptarVehiculo"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="Aceptar"
        android:backgroundTint="@color/colorPrimary"/>

</RelativeLayout>
