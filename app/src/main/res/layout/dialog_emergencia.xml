<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="SOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:textStyle="normal|bold"
        android:textSize="25sp"
        android:textColor="@color/colorSOS"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image"
        android:layout_toEndOf="@+id/image"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="12dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_action_alert"
        android:id="@+id/image"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <View
        android:id="@+id/bar1"
        android:layout_width="225dp"
        android:layout_height="1dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/image"
        android:background="@android:color/black"/>

    <TextView
        android:text="Manten pulsado 'Aceptar' varios segundos."
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textStyle="italic"
        android:textSize="15sp"
        android:layout_below="@+id/text" />

    <Button
        android:id="@+id/dialogButtonOK"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Aceptar"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text2"
        android:textSize="15sp"
        android:backgroundTint="@color/colorSOS"
        tools:ignore="RtlHardcoded,RtlSymmetry" />
    <Button
        android:id="@+id/dialogButtonCancel"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Cancelar"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text2"
        android:layout_toRightOf="@+id/dialogButtonOK"
        android:textSize="15sp"
        android:backgroundTint="@color/colorSecondaryText"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

</RelativeLayout>